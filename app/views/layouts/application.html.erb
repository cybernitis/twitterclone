<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <%= render 'layouts/header' %>
  <hr />
  <% flash.each do |key, value| %>
    <div class="flash <%= key %> alert-message">
      <%= value %>
      <a class="close" href="#">Ã—</a>
    </div>
  <% end %>
  <%= yield %>
</div>
<%= debug params if Rails.env.development? %>
</body>
<script>
  $(".alert-message").alert()
</script>
</html>
